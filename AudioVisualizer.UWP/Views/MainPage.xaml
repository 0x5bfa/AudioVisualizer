<Page
    x:Class="AudioEqualizer.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioEqualizer"
    xmlns:vm="using:AudioEqualizer.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.DataContext>
        <vm:AudioPlayerPageViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border x:Name="AppTitle"
                IsHitTestVisible="True"
                VerticalAlignment="Top"
                Background="Transparent"
                Height="24"
                Canvas.ZIndex="1" 
                Padding="12,8,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="SelectedFileName"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}" FontWeight="SemiBold" xml:space="preserve"/>
                <TextBlock
                    x:Uid="TitleAppName"
                    x:Name="TitleAppName"
                    Text="Audio Equalizer"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}" xml:space="preserve"/>
                <TextBlock
                    x:Uid="TitleAppNamePreview"
                    x:Name="PreviewTitle"
                    Text="PREVIEW"
                    VerticalAlignment="Center"
                    Margin="4, 0, 0, 0"
                    FontSize="11"
                    Foreground="{StaticResource TextFillColorSecondaryBrush}" />
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <muxc:MenuBar>
                <muxc:MenuBarItem x:Uid="FileMenuBarItem" Title="File">
                    <MenuFlyoutItem
                        x:Uid="OpenMenuItem"
                        MinWidth="120"
                        Text="Open"
                        Click="OpenMenuItem_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe838;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="O"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSubItem
                        x:Uid="RecentMenuItem"
                        x:Name="RecentMenuItem"
                        Text="Recent">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xe823;" />
                        </MenuFlyoutSubItem.Icon>
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem
                        x:Uid="ExitMenuItem"
                        Text="Exit">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe711;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </muxc:MenuBarItem>
                <muxc:MenuBarItem x:Uid="PlayerMenuBarItem" Title="Player">
                    <MenuFlyoutItem
                        x:Uid="PlayMenuItem"
                        MinWidth="120"
                        Text="Play">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe768;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="P"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="StopMenuItem"
                        Text="Stop">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe769;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="R"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </muxc:MenuBarItem>
                <muxc:MenuBarItem x:Uid="OptionMenuBarItem" Title="Option">
                    <MenuFlyoutItem
                        x:Uid="SettingsMenuItem"
                        Text="Settings"
                        Click="SettingsMenuItem_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe713;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="S"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem
                        x:Uid="AboutMenuItem"
                        Text="About"
                        Click="AboutMenuItem_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xe74c;" />
                        </MenuFlyoutItem.Icon>
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="A"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </muxc:MenuBarItem>
            </muxc:MenuBar>
        </Grid>
        <Grid Grid.Row="2" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Frame x:Name="ContentFrame" />
        </Grid>
    </Grid>
</Page>
